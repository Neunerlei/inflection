{
	"name": "neunerlei/inflection",
	"description": "An inflector with implementation agnostic inflector adapter and fancy string modifications",
	"type": "library",
	"license": "Apache-2.0",
	"authors": [
		{
			"name": "Martin Neundorfer",
			"email": "code@neunerlei.eu",
			"homepage": "https://www.neunerlei.eu",
			"role": "Developer"
		}
	],
	"support": {
		"issues": "https://github.com/neunerlei/inflection/issues",
		"source": "https://github.com/neunerlei/inflection"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.0",
		"neunerlei/dbg": "^2.0.1"
	},
	"require": {
		"php": "^8.1",
		"symfony/string": "^6.2.2"
	},
	"autoload": {
		"psr-4": {
			"Neunerlei\\Inflection\\": "Classes"
		}
	},
	"scripts": {
		"test": "vendor/bin/phpunit Tests",
		"test-cover-clover": "XDEBUG_MODE=coverage phpunit --coverage-clover Tests/Coverage.xml",
		"test-cover": "XDEBUG_MODE=coverage phpunit Tests --coverage-html Tests/Coverage"
	},
	"version": "1.3.1",
	"config": {
		"allow-plugins": {
			"0.0.0/composer-include-files": true
		}
	}
}
